{
	"files.exclude": {
		"**/*.csproj": true,
		"**/*.sln": true
	},
	"omnisharp.autoStart": true,
	"omnisharp.useModernNet": true,
	"dotnet.server.useOmnisharp": true,
	"editor.rulers": [
		120
	],
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"[markdown]": {
		"editor.rulers": [
			80
		],
		"editor.tabSize": 4,
		"editor.insertSpaces": true
	}
}
