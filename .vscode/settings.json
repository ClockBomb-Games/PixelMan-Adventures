{
	// Exclude from the finder
	"files.exclude": {
		"**/*.csproj": true,
		"**/*.sln": true
	},

	// CSharp and OmniSharp settings
	"omnisharp.autoStart": true,
	"omnisharp.useModernNet": true,
	"dotnet.server.useOmnisharp": true,

	// Editor settings
	"editor.rulers": [
		120
	],
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"[markdown]": {
		"editor.rulers": [
			80
		],
		"editor.tabSize": 4,
		"editor.insertSpaces": true
	},

	// Theme settings
	"csharp.semanticHighlighting.enabled": true,
}
